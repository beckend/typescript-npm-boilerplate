{
  "extends": [
    "tslint-react",
    "tslint:recommended"
  ],
  "rules": {
    "jsx-no-multiline-js": false,
    "no-require-imports": false,
    "no-var-requires": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}
