{
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es2015",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ],
        "noImplicitAny": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react"
    },
    "include": [
        "./**/*.spec.ts",
        "./**/*.spec.tsx"
    ]
}